{
    "_comment": "See https://github.com/buzinas/tslint-eslint-rules for more details",
    "extends": [
        "tslint-eslint-rules"
    ],
    "rules": {
        "no-console": [false],
        "no-conditional-assignment": true,
        "semicolon": [false, "never"],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "singleline": "never",
                "esSpecCompliant": true
            }
        ],
        "ter-indent": [
            true,
            4,
            {
                "FunctionExpression": {
                    "parameters": 1,
                    "body": 1
                }
            }
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type",
            "check-type-operator",
            "check-preblock"
        ],
        "linebreak-style": [true, "LF"],
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "no-unexpected-multiline": true
    }
}
